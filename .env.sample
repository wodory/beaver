# 데이터베이스 설정
DB_TYPE=postgresql # postgresql 또는 sqlite
DATABASE_URL=postgresql://username:password@host:port/database_name
SQLITE_DB_PATH=./data/github-metrics.db

# GitHub API 설정
GITHUB_TOKEN=your_github_personal_access_token

# 애플리케이션 설정
PORT=3000
NODE_ENV=development
REPOS_BASE_PATH=./repos

# GitHub API 접근을 위한 개인 액세스 토큰 (Personal Access Token)
# 토큰 생성 방법: https://github.com/settings/tokens/new
# 필요한 권한: repo (저장소 접근), user (사용자 정보 접근)

VITE_GITHUB_TOKEN=your_github_personal_access_token 

# JIRA API 설정
# JIRA Cloud 인스턴스 URL: https://your-domain.atlassian.net
# JIRA API 토큰 생성 방법: https://id.atlassian.com/manage-profile/security/api-tokens
# 필요한 권한: 이슈 및 프로젝트 읽기 권한
# JIRA_PROJECT_KEYS는 쉼표로 구분된 프로젝트 키 목록 (예: PROJ1,PROJ2,PROJ3)
# 개발 중에 모의 데이터를 사용하려면 USE_MOCK_JIRA=true로 설정하세요.
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-api-token
JIRA_PROJECT_KEYS=PROJ1,PROJ2,PROJ3
USE_MOCK_JIRA=false 