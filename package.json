  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/checkPort.js && vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:jira": "tsx src/tests/jira-api-test.ts",
